<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.candymanager.social.RedesSociaisController"
    android:id="@+id/listaPublicacoes"
    android:background="@color/colorAccent"
    >


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/novaPublicacaoFloatingActionButton"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/adiciona"
        app:backgroundTint="@color/colorPrimary" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listaPublicacoesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <com.futuremind.recyclerviewfastscroll.FastScroller
        android:id="@+id/redesSociaisFastScroller"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:gravity="right"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentRight="true"/>


</FrameLayout>
