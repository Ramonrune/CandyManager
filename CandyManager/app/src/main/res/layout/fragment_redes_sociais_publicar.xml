<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/publicarSocial"
    android:background="@color/colorAccent">


    <LinearLayout
        android:id="@+id/previewPublicarLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagePreviewProduto"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/produto" />

            <EditText
                android:id="@+id/editTxtLegenda"
                android:layout_width="191dp"
                android:layout_height="132dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="40dp"
                android:layout_toLeftOf="@+id/imagePreviewProduto"
                android:background="@drawable/custom_edittext_white"
                android:ems="10"
                android:inputType="textMultiLine"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="18sp"
                android:typeface="sans"
                tools:text=" Digite a Legenda aqui" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imagePreviewProduto"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonMarcarPessoas"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/imagePreviewProduto"
                android:text="Marcar Pessoas"
                tools:ignore="NotSibling" />

            <Button
                android:id="@+id/buttonAddLocalizacao"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Adicionar Localicação"
                tools:ignore="NotSibling" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="30dp"
                android:orientation="vertical">


                <Switch
                    android:id="@+id/switchFacebook"
                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/facebook_mini"
                    android:lineSpacingExtra="18sp"
                    android:text="  Facebook"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp"
                    android:typeface="sans" />

                <Switch
                    android:id="@+id/switchInstagram"
                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/instagram_mini"
                    android:lineSpacingExtra="18sp"
                    android:text="  Instagram"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp"
                    android:typeface="sans" />

                <Switch
                    android:id="@+id/switchTwitter"
                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/twitter_mini"
                    android:lineSpacingExtra="18sp"
                    android:text="  Twitter"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp"
                    android:typeface="sans" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</FrameLayout>