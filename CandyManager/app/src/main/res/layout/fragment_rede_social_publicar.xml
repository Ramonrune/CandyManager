<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/publicarSocial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/previewPublicarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/imagePreviewProdutoImageButton"
                        android:layout_width="match_parent"
                        android:layout_height="320dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/custom_edittext_white"
                        app:srcCompat="@drawable/imagem" />

                    <EditText
                        android:id="@+id/legendaEditText"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_toLeftOf="@+id/imagePreviewProduto"
                        android:layout_weight="1"
                        android:background="@drawable/custom_edittext_white"
                        android:hint="Digite a Legenda aqui"
                        android:inputType="textMultiLine"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="18sp"
                        android:typeface="sans" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</FrameLayout>