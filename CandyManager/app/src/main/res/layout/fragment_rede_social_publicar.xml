<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/publicarSocial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/previewPublicarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/imagePreviewProdutoImageButton"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/custom_edittext_white"
                        app:srcCompat="@drawable/imagem" />

                    <EditText
                        android:id="@+id/legendaEditText"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_toLeftOf="@+id/imagePreviewProduto"

                        android:layout_weight="1"
                        android:background="@drawable/custom_edittext_white"
                        android:hint="Digite a Legenda aqui"
                        android:inputType="textMultiLine"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="18sp"
                        android:typeface="sans" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_edittext_white"
                    android:orientation="vertical">


                    <Switch
                        android:id="@+id/publicarFacebookSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:drawableLeft="@drawable/facebook_mini"
                        android:lineSpacingExtra="18sp"
                        android:text="  Facebook"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="18sp"
                        android:typeface="sans" />

                    <Switch
                        android:id="@+id/publicarInstagramSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:drawableLeft="@drawable/instagram_mini"
                        android:lineSpacingExtra="18sp"
                        android:text="  Instagram"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="18sp"
                        android:typeface="sans" />

                    <Switch
                        android:id="@+id/publicarTwitterSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:drawableLeft="@drawable/twitter_mini"
                        android:lineSpacingExtra="18sp"
                        android:text="  Twitter"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="18sp"
                        android:typeface="sans" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</FrameLayout>