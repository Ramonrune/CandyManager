<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.candymanager.social.RedeSocialController"
    android:id="@+id/listaPublicacoes"
    android:background="@color/colorAccent"
    >


    <ListView

        android:visibility="invisible"
        android:id="@+id/listaRedesSociaisListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:visibility="visible"
        android:id="@+id/progressoProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/novaPublicacaoFloatingActionButton"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/adiciona"
        app:backgroundTint="@color/colorPrimary" />



</FrameLayout>
