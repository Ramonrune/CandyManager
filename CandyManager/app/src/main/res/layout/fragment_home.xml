<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.candymanager.home.HomeController"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    android:padding="16dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/produtosLayout"
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:background="@drawable/custom_card"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/imageView0"
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:src="@drawable/produto" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Produtos"
                    android:textColor="#000"

                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pedidosLayout"
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:background="@drawable/custom_card"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="11dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:src="@drawable/pedidos" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Pedidos"
                    android:textColor="#000"

                    android:textSize="20sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/clientesLayout"
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:background="@drawable/custom_card"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="12dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:src="@drawable/cliente" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Clientes"
                    android:textColor="#000"

                    android:textSize="20sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/redesSociaisLayout"
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:background="@drawable/custom_card"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:src="@drawable/rede_social" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Redes sociais"
                    android:textColor="#000"

                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
